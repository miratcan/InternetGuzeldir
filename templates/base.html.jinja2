    <div style="margin: auto;width: 200px;display: flex;justify-content: center;padding: 4px;">
      <select id="theme-selector">
        <option value="style.css" selected>Tema 1</option>
        <option value="style2.css">Tema 2</option>
      </select>
    </div>

    <div id="wrapper">
