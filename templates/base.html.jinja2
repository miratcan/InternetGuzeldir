  <!-- theme selector script -->
  <script>
    const select = document.querySelector("#theme-selector");
    select.addEventListener("change", function(e) {
      const value = e.target.value
      document.querySelector("link").setAttribute("href", `{{ root_path }}${value}`)
    })
  </script>
